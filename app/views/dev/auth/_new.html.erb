<section class="profile-container gray-bg">
  <div class="container">
    <div class="row align-items-start">
      <div class="col-lg col-xl">
        <div class="profile-content-area m-40px-tb card card-body">
            <h5></h5>
            <p></p>
            <%= form_tag(dev_auth_new_path, method: :post) do |f| %>
              <% if flash[:error] %>
                <div class="row text-center justify-content-between align-items-center mb-2">
                  <div class="col-auto w-100">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <strong><%= flash[:error] %></strong>
                      <button class="close" type="button" data-dismiss="alert" aria-label="Close"><span class="font-weight-light" aria-hidden="true">Ã—</span></button>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="row m-25px-b">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Nome</label>
                    <%= text_field_tag :nome, "", class:'form-control', required: true %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">E-mail</label>
                    <%= email_field_tag :email, "", class:'form-control' , required: true %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Senha</label>
                    <%= password_field_tag :senha, "", class:'form-control' , required: true %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Nacionalidade</label>
                    <%= select_tag :idioma, options_for_select([["Brasil", true], ["Espanha", false]]) ,class: 'form-control', required: true  %>
                  </div>
                </div>
              </div>
              <div class="p-20px-t">
                <%= submit_tag "Enviar", class:'m-btn m-btn-radius m-btn-theme', data: {disable_with: "Enviando..."} %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</section>