<!-- Main -->
<main>
  <section class="profile-bg-section parallax section_ground" >
  </section>
  <section class="profile-container gray-bg">
    <div class="container">
      <div class="row align-items-start">
        <div class="col-lg-4 col-xl-3">
          <%= render 'dev/configuracao/section', {section_order: "profile_edit"} %>
        </div>
        <div class="col-lg-8 col-xl-9">
          <div class="profile-content-area m-40px-tb card card-body">
            <div class="border-bottom-1 border-color-dark-gray m-35px-b p-35px-b">
              <h5>General information</h5>
              <p>You can help us, by filling your data, create you a much better experience using our website.</p>
              <div class="row m-25px-b">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">First name</label>
                    <input type="text" name="name" placeholder="First name" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Last name</label>
                    <input type="text" name="name" placeholder="Last name" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Birthday</label>
                    <input type="number" name="name" placeholder="MM/DD/YYYY" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Gender</label>
                    <input type="text" name="name" placeholder="Gender" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Email</label>
                    <input type="email" name="name" placeholder="Email" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Phone</label>
                    <input type="text" name="name" placeholder="Phone" class="form-control">
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="form-control-label">About you</label>
                    <textarea class="form-control" name="message" rows="3" placeholder="Tell me about yourself"></textarea>
                  </div>
                </div>
              </div>
              <h5>Address details</h5>
              <p>Fill in your address info for upcoming orders or payments.</p>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="form-control-label">Address</label>
                    <input type="text" name="name" placeholder="Enter your home address" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">City</label>
                    <input type="text" name="name" placeholder="City" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Country</label>
                    <input type="text" name="name" placeholder="Country" class="form-control">
                  </div>
                </div>
              </div>
              <div class="p-20px-t">
                <button class="m-btn m-btn-radius m-btn-theme">Save changes</button>
                <button class="m-btn m-btn-radius m-btn-theme-light">Cancel</button>
              </div>
            </div>
            <div>
              <h5>Change password</h5>
              <p>Fill in your address info for upcoming orders or payments.</p>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Old password</label>
                    <input type="password" name="name" placeholder="Old password" class="form-control">
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">New password</label>
                    <input type="password" name="name" placeholder="New password" class="form-control">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label class="form-control-label">Re-type New password</label>
                    <input type="password" name="name" placeholder="Re-type New password" class="form-control">
                  </div>
                </div>
                <div class="col-12">
                  <button class="m-btn m-btn-radius m-btn-theme">Change Password</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- main end -->